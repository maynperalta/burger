<div class="container">
    <div class="jumbotron justify-content-center">
        <img src="../public/assets/img/Burger-PNG.png" alt="Burger">
        <h1>Have A Burger</h1>


    </div>
    <row class="justify-content-center">
        <div class="col-md-6">
            <h2>My Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span><strong>{{this.burger_name}}</strong></span>
                <button type="button" class="devour" data-id="{{this.id}}">Devour</button>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong>{{this.burger_name}}</strong></span>
                <button type="button" class="delete" data-id="{{this.id}}">Delete</button>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </row>
    <row>
        <h2>Create A Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="newBurger">My Burger:</label>
                <input type="text" id="newBurger" name="burger">
            </div>
            <button type="submit">Add Burger!</button>
        </form>
    </row>
</div>